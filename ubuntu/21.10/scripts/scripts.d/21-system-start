
mkdir $LWRISO_ROOT/etc/homeros
cat <<EOF > $LWRISO_ROOT/etc/homeros/system-start
#!/bin/bash
# Copyright 2021 Michael Pozhidaev <msp@luwrain.org>

#killall brltty
#/sbin/brltty -t ru

pulseaudio --system -D ||:

export VOICEMAN_LIBAO_DRIVER=alsa
if ! [ -e /tmp/voiceman.socket ]; then
    /usr/bin/voicemand -d
fi

/bin/su - $LWRISO_USER -c /usr/bin/startx
EOF

chmod 755 $LWRISO_ROOT/etc/homeros/system-start
